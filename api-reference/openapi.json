    "/conversations": {
      "post": {
        "description": "Get conversations using cursor-based pagination.",
        "requestBody": {
          "description": "Provide pagination and filtering parameters to retrieve the next page of conversations.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [],
                "properties": {
                  "phoneNumberId": {
                    "type": "string",
                    "description": "Filter conversations by phone number identifier."
                  },
                  "startKey": {
                    "type": "object",
                    "description": "Key returned from a previous request. Pass this value to fetch the next page of conversations.",
                    "additionalProperties": true
                  },
                  "limit": {
                    "type": "integer",
                    "default": 25,
                    "minimum": 1,
                    "maximum": 100,
                    "description": "Maximum number of conversations to return."
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "required": false
        },
        "responses": {
          "200": {
            "description": "Conversations",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "dbObject": {
                      "type": "array",
                      "description": "List of conversations returned for this page of results.",
                      "items": {
                        "$ref": "#/components/schemas/Conversation"
                      }
                    },
                    "hasMoreItemsToFetch": {
                      "type": "boolean"
                    },
                    "lastEvaluatedKey": {
                      "type": "object",
                      "description": "If present, call the same endpoint again and pass this value as `startKey` to retrieve the next page of results. Pagination is cursor-based.",
                      "additionalProperties": true
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
